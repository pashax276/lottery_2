# For .env.production
# Note that we're intentionally leaving this blank - the frontend should make relative API calls
VITE_API_URL=

# For docker-compose.yml environment section (frontend service)
environment:
  - NODE_ENV=production
  # Don't set VITE_API_URL here - we want relative URLs
  
# For nginx.conf - update the proxy_pass to ensure correct routing
location /api/ {
    proxy_pass http://backend:5001;  # No trailing slash here
    proxy_http_version 1.1;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_redirect off;
    # Rest of your configuration...
}